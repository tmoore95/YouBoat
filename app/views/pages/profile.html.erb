<% if @current_user == @user %>
<div class='account-details'>
   <h1 class='profile-header'>Account Details</h1>
   <%= @current_user.name %>
   Email: <%= @current_user.email %>
</div>
<div class='bookings'>
   <h1 class='profile-header'>My bookings</h1>
   <div class="cards">
      <% @bookings.each do |b| %>
      <a href='/bookings/<%=b.id%>'>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://img.drivemag.net/media/default/0001/29/thumb_28290_default_large.jpeg)">
         <%= b.listing.name %>
         <div class='card-tag-bottom'><%= b.start_date%></div>
         <div class='booking-host'>Host: <%= b.listing.user.email%></div>
      </div>
      </a>
      <% end %>
   </div>
</div>
<% else %>
<%= @user.name %>
<% end %>
<div class='listings'>
   <h1 class='profile-header'><%=@user == @current_user ? 'My listings' : 'Listings'%></h1>
   <div class="cards">
      <% @user.listings.each do |l| %>
      <a href='/listings/<%=l.id%>'>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://img.drivemag.net/media/default/0001/29/thumb_28290_default_large.jpeg)">
         <%= l.name %>
         <div class='card-tag-bottom'>Â£<%= l.price_per_day%></div>
      </div>
      </a>
      <% end %>
   </div>
</div>


