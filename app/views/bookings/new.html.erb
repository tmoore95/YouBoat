<style>
.footer {
    display: none;
}

body {
  background-image: url('https://static.scientificamerican.com/sciam/cache/file/30647AC1-B772-4607-BF3C3D43456E7103_source.jpg');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  height: 100vh;
}

</style>

<div style='margin-top: 5rem' class='py-4'>

<h2 class='offset-md-3 py-4'> <i style='color:#177FFC;' class="bi bi-plus-circle"></i> New Booking / <%= @listing.name %>, <%= @listing.location %></h2>
<h6 class='offset-md-3 py-4'>When would you like to rent this vessel? Pick a date.</h6>
<%= simple_form_for [@listing, @booking], html: { class: "col-md-6 offset-md-3" } do |f| %>
<%= f.input :start_date %>
<%= f.input :end_date %>
<%= f.submit class: "btn btn-primary" %>
<% end %>

</div>

<p style="margin-top: 0; padding-top: 0;" class='offset-md-3 py-4'>Once you have created the booking, <strong><%= @listing.user.name %> </strong> will be notified so that they can process it.</p>
