<style>

body {
  background-image: url('https://wallpaperaccess.com/full/1302472.jpg');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  height: 100vh;
}

.footer {
  display:none;
}

</style>

<div  style='width: 33%; margin-top:10rem !important;margin-bottom:5rem !important; border-radius: 12px !important;' class='container bg-white p-3 rounded shadow-lg'>

<h2 class='pb-3'>Login
</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class='sign-links'>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>

</div>